<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/equip"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="-20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_device_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:text="设备号："
                android:textColor="@color/red"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/device_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/tv_device_number"
                android:textColor="@color/red"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/tv_check_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/device_number"
                android:textSize="12dp"
                android:text="巡检次数："
                android:textColor="@color/red" />
            <TextView
                android:id="@+id/check_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/tv_check_number"
                android:textColor="@color/red"
                android:textSize="12dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_number"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_device_number"
                android:layout_marginTop="11dp"
                android:text="设备巡检时间："
                android:textColor="@color/red"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/tv_check_time"
                android:textColor="@color/toolbarSubTextColor"
                android:textSize="12dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
